<% book.book_comments.each do |book_comment| %>
<table>
    <tr>
        <td class="pr-2">
            <%= image_tag book_comment.user.get_profile_image, size: '100x100' %>
            <p><%= book_comment.user.name %></p>
        </td>
        <td class="pr-2"><%= book_comment.comment %></td>
              <% if book_comment.user == current_user %>
              <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true, data: {"turbolinks" => false} %></td>
              <% end %>
    </tr>
</table>
<% end %>